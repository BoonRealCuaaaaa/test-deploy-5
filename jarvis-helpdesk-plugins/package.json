{
  "name": "root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "yarn workspaces run lint",
    "check-types": "yarn workspaces run check-types",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@commitlint/cz-commitlint": "^17.5.0",
    "commitizen": "^4.3.0",
    "husky": "^8.0.3",
    "inquirer": "^8.0.0",
    "@types/node": "^20.12.12",
    "typescript": "^5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "engines": {
    "node": ">=20",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  }
}
